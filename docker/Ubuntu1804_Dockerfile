# Dockerfile for Ubuntu 18.04 Build Enviroment for Ezra Project

FROM ubuntu:18.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update
RUN apt-get install -y dialog apt-utils
RUN apt-get install -y build-essential libsword-dev libsqlite3-0 libcurl4-gnutls-dev pkg-config
RUN apt-get install -y git vim sudo

RUN apt-get install -y curl python3-software-properties
RUN curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -
RUN apt-get update
RUN apt-get install -y nodejs

RUN npm install -g electron-packager
RUN npm install -g electron-installer-debian

