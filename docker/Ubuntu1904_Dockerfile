# Dockerfile for Ubuntu 19.04 Build Enviroment for Ezra Project

FROM ubuntu:19.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update
RUN apt-get install -y dialog apt-utils
RUN apt-get install -y build-essential npm nodejs libsword-dev libsqlite3-0 libcurl4-gnutls-dev pkg-config
RUN apt-get install -y git vim
RUN npm install -g electron-installer-debian

