{
  "name": "ezra-project",
  "version": "0.8.2",
  "description": "Ezra Project is a bible study software focussing on topical study based on keywords/tags",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w node-sword-interface -v 4.2.6",
    "rebuild-win": "node_modules\\.bin\\electron-rebuild.cmd --arch=ia32 -f -w sqlite3 -v 4.2.6",
    "migrate-db": "sequelize db:migrate && sequelize db:seed:all",
    "purge-build-artifacts": "./purge_build_artifacts.sh",
    "package-linux": "electron-packager . ezra-project --overwrite --platform=linux --arch=x64 --prune=true --out=release --electron-version=4.2.6",
    "package-win": "electron-packager . ezra-project --overwrite --platform=win32 --arch=ia32 --prune=true --out=release --electron-version=4.2.6",
    "package-mac": "./package_mac.sh",
    "sign-mac": "./sign_mac.sh",
    "notarize-mac": "./notarize_mac.sh",
    "dmg-mac": "electron-installer-dmg release/Ezra\\ Project-darwin-x64/Ezra\\ Project.app ezra-project --out=release --overwrite",
    "flat-mac": "electron-osx-flat release/Ezra\\ Project-darwin-x64/Ezra\\ Project.app --platform=darwin --pkg=release/ezra-project.pkg",
    "show-mac-ids": "security find-identity -v -p codesigning",
    "installer-win": "node_modules\\.bin\\electron-installer-windows --src release\\ezra-project-win32-ia32 --dest release\\packages --config win_installer_config.json",
    "deb_1804": "electron-installer-debian --src release/ezra-project-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_ubuntu1804.json",
    "deb_1904": "electron-installer-debian --src release/ezra-project-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_ubuntu1904.json",
    "rpm_centos7": "electron-installer-redhat --src release/ezra-project-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_centos7.json",
    "rpm_fedora29": "electron-installer-redhat --src release/ezra-project-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_fedora29.json",
    "rpm_opensuse42": "electron-installer-redhat --src release/ezra-project-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_opensuse42.json"
  },
  "author": "Tobias Klein",
  "license": "GPL-3.0",
  "dependencies": {
    "@sentry/electron": "^0.17.1",
    "electron-debug": "^2.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-settings": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "fast-csv": "^2.4.1",
    "fs-extra": "^7.0.1",
    "iso-639-3": "^1.2.0",
    "minimist": "^1.2.0",
    "mousetrap": "^1.6.3",
    "node-addon-api": "^1.6.2",
    "node-sword-interface": "^0.55.0",
    "officegen": "^0.5.2",
    "pug": "^2.0.3",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.0.9",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "electron": "^4.2.6",
    "electron-installer-dmg": "^3.0.0",
    "electron-osx-sign": "^0.4.12",
    "electron-packager": "^14.0.4",
    "electron-rebuild": "^1.8.4",
    "node-gyp": "^3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tobias-klein/ezra-project.git"
  }
}
