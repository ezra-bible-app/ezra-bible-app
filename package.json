{
  "name": "ezra-project",
  "version": "0.8.0",
  "description": "Ezra Project is a bible study software focussing on topical study based on keywords/tags.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild-linux": "electron-rebuild -f -w node-sword-interface -v 4.2.0",
    "rebuild-win": "node_modules\\.bin\\electron-rebuild.cmd --arch=ia32 -f -w sqlite3 -v 4.2.0",
    "migrate-db": "sequelize db:migrate && sequelize db:seed:all",
    "package-linux": "electron-packager . ezra-project --overwrite --platform=linux --arch=x64 --prune=true --out=release --electron-version=4.2.0",
    "package-win": "electron-packager . ezra-project --overwrite --platform=win32 --arch=ia32 --prune=true --out=release --electron-version=4.2.0",
    "deb_1804": "electron-installer-debian --src release/ezra-project-linux-x64/ --dest release/packages/ --arch amd64 --config deb_config_ubuntu1804.json",
    "deb_1904": "electron-installer-debian --src release/ezra-project-linux-x64/ --dest release/packages/ --arch amd64 --config deb_config_ubuntu1904.json",
    "rpm_centos7": "electron-installer-redhat --src release/ezra-project-linux-x64/ --dest release/packages/ --arch x86_64 --config rpm_config_centos7.json",
    "rpm_fedora29": "electron-installer-redhat --src release/ezra-project-linux-x64/ --dest release/packages/ --arch x86_64 --config rpm_config_fedora29.json"
  },
  "author": "Tobias Klein",
  "license": "GPL-3.0",
  "dependencies": {
    "electron-debug": "^2.1.0",
    "electron-settings": "^3.2.0",
    "fast-csv": "^2.4.1",
    "fs-extra": "^7.0.1",
    "iso-639-3": "^1.2.0",
    "minimist": "^1.2.0",
    "mousetrap": "^1.6.3",
    "node-addon-api": "^1.6.2",
    "node-sword-interface": "^0.24.0",
    "officegen": "^0.5.2",
    "pug": "^2.0.3",
    "sequelize": "^4.42.0",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^4.2.0",
    "electron-installer-debian": "^1.2.0",
    "electron-installer-redhat": "^1.1.0",
    "electron-packager": "^13.1.1",
    "electron-rebuild": "^1.8.4",
    "node-gyp": "^3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tobias-klein/ezra-project.git"
  }
}
