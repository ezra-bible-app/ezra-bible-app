{
  "name": "ezra-bible-app",
  "productName": "Ezra Bible App",
  "version": "1.19.0-Dev",
  "description": "Ezra Bible App is a Bible study tool focussing on topical study based on keywords/tags",
  "author": "Tobias Klein",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/ezra-bible-app/ezra-bible-app.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "bundle": "node_modules/.bin/browserify app/frontend/ezra_init.js -u node_modules/electron/index.js -u app/frontend/helpers/emoji_helper.js -u app/frontend/helpers/fs_helper.js -t brfs --bare --ignore-missing -o dist/ezra_init.js",
    "minify": "node_modules/.bin/terser --compress --mangle -- dist/ezra_init.js > dist/ezra_init.min.js",
    "browserify": "npm run bundle && npm run minify",
    "dev-test": "./node_modules/.bin/cucumber-js --fail-fast",
    "full-test": "./node_modules/.bin/cucumber-js",
    "headless-test": "xvfb-run ./node_modules/.bin/cucumber-js",
    "compile-pug": "pug --client --no-debug --pretty -n verseListTemplate app/templates/verse_list.pug",
    "add-github-workspace-to-safe-git-dirs": "git config --global --add safe.directory /github/workspace",
    "commit-info": "git-to-json --dir app --name commit_info",
    "postinstall": "npm run compile-pug",
    "rebuild": "electron-rebuild -f -w node-sword-interface -v 32.2.3",
    "rebuild-nsi": "electron-rebuild -f -o node-sword-interface -v 32.2.3",
    "migrate-db": "sequelize db:migrate && sequelize db:seed:all",
    "purge-build-artifacts": "./build_scripts/purge_build_artifacts.sh",
    "prune-node-modules": "./node_modules/.bin/clean-modules -y",
    "package-linux": "electron-packager . ezra-bible-app --overwrite --platform=linux --arch=x64 --prune=true --out=release --electron-version=32.2.3 --icon=icons/ezra.png --protocol=ezrabible --protocol-name='Ezra Bible App'",
    "package-mac-x64": "./build_scripts/macos/package_mac.sh x64",
    "package-mac-arm64": "./build_scripts/macos/package_mac.sh arm64",
    "sign-mac-x64": "./build_scripts/macos/sign_mac.sh x64",
    "sign-mac-arm64": "./build_scripts/macos/sign_mac.sh arm64",
    "notarize-mac-x64": "./build_scripts/macos/notarize_mac.sh x64",
    "notarize-mac-arm64": "./build_scripts/macos/notarize_mac.sh arm64",
    "dmg-mac-x64": "electron-installer-dmg \"release/Ezra Bible App-darwin-x64/Ezra Bible App.app\" \"Ezra Bible App\" --out=release --overwrite --icon=icons/ezra.icns",
    "dmg-mac-arm64": "electron-installer-dmg \"release/Ezra Bible App-darwin-arm64/Ezra Bible App.app\" \"Ezra Bible App\" --out=release --overwrite --icon=icons/ezra.icns",
    "show-mac-ids": "security find-identity -v -p codesigning",
    "fix-binary-timestamps": "powershell build_scripts\\win32\\fix_binary_timestamps.ps1",
    "deb_2004": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_ubuntu2004.json",
    "deb_2204": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_ubuntu2204.json",
    "deb_2404": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_ubuntu2404.json",
    "deb_mint18": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_mint18.json",
    "deb_buster": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_debian10.json",
    "deb_bullseye": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_debian11.json",
    "deb_bookworm": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_debian12.json",
    "deb_trixie": "electron-installer-debian --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch amd64 --config package_config/deb_config_debian13.json",
    "rpm_centos": "electron-installer-redhat --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_centos.json",
    "rpm_fedora": "electron-installer-redhat --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_fedora.json",
    "rpm_fedora35": "electron-installer-redhat --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_fedora35.json",
    "rpm_fedora37": "electron-installer-redhat --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_fedora37.json",
    "rpm_opensuse_leap": "node release/electron-installer-redhat/src/cli.js --src release/ezra-bible-app-linux-x64/ --dest release/packages/ --arch x86_64 --config package_config/rpm_config_opensuse_leap.json",
    "build-linux": "./build_scripts/linux/build.sh",
    "build-mac-x64": "./build_scripts/macos/build_mac.sh x64",
    "build-mac-arm64": "./build_scripts/macos/build_mac.sh arm64",
    "build-win": "build_scripts\\win32\\build_win32.bat",
    "build-win-installer": "build_scripts\\win32\\build_installer_win32.bat",
    "build-win-eb": "electron-builder --win --ia32",
    "upload-debug-symbols-mac": "./node_modules/.bin/sentry-cli upload-dif -o tobias-klein -p ezra-bible-app ./node_modules/node-sword-interface/build/Release/node_sword_interface.node",
    "update-loc-metrics": "./build_scripts/update_loc_metrics.sh",
    "update-cc-metrics": "./build_scripts/update_complexity_metrics.sh",
    "doc": "./node_modules/.bin/jsdoc -c jsdoc.conf --readme DESIGN.md -d docs/docs -r --verbose app",
    "test": "./node_modules/.bin/jest",
    "convert-sword-languages": "node build_scripts/frontend/sword_locales_to_json.js",
    "generate-long-tag-list": "node build_scripts/generate_long_tag_list.js",
    "export-done-items": "bash build_scripts/export_done_items.sh",
    "export-open-issues": "bash ./build_scripts/export_open_issues.sh"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@sentry/browser": "^10.27.0",
    "@sentry/electron": "^7.2.0",
    "@ungap/custom-elements": "^1.3.0",
    "async-mutex": "^0.4.1",
    "buffer": "^6.0.3",
    "chart.js": "^2.9.4",
    "codemirror": "^5.64.0",
    "conf": "^7.1.2",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "darkmode-js": "^1.5.7",
    "docx": "^9.5.1",
    "dropbox": "^10.32.0",
    "electron-debug": "^3.1.0",
    "electron-window-state": "^5.0.3",
    "font-list": "^1.5.1",
    "fs-extra": "^9.0.1",
    "fuse.js": "^6.4.6",
    "i18next": "^21.6.3",
    "i18next-electron-language-detector": "0.0.10",
    "iso-639-3": "^3.0.1",
    "isomorphic-fetch": "^3.0.0",
    "izitoast": "^1.4.0",
    "jquery-i18next": "^1.2.1",
    "log-timestamp": "^0.3.0",
    "marked": "^4.0.8",
    "mousetrap": "^1.6.5",
    "node-sword-interface": "^1.0.105",
    "pug": "^3.0.0",
    "remove-markdown": "^0.3.0",
    "sanitize-html": "^2.13.0",
    "sequelize": "^5.22.4",
    "simple-emoji-button": "^4.6.2",
    "sqlite3": "^5.1.7",
    "strongs": "^1.0.2",
    "umzug": "^2.3.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@electron/osx-sign": "^1.3.3",
    "@electron/rebuild": "^3.6.0",
    "@sentry/cli": "^2.41.1",
    "better-docs": "^2.3.2",
    "brfs": "^2.0.2",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "clean-modules": "^3.1.1",
    "copy-dir": "^1.3.0",
    "cucumber": "^6.0.5",
    "electron": "^32.2.3",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.0.0",
    "eslint": "^9.14.0",
    "git-to-json": "^2.1.4",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jsdoc": "^4.0.0",
    "node-abi": "^3.71.0",
    "node-gyp": "^12.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "sequelize-cli": "^5.5.1",
    "terser": "^5.12.1",
    "xvfb-maybe": "^0.2.1"
  },
  "overrides": {
    "sqlite3": {
      "node-gyp": "^12.1.0"
    }
  },
  "build": {
    "appId": "net.ezrabibleapp.electron",
    "productName": "Ezra Bible App",
    "copyright": "Copyright Â© 2026 Tobias Klein",
    "asar": true,
    "npmRebuild": false,
    "buildDependenciesFromSource": true,
    "directories": {
      "output": "release/packages"
    },
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "**/*.lib",
      "node_modules/node-sword-interface/locales.d/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/ezra.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "certificateSubjectName": "Open Source Developer, Tobias Klein",
      "signAndEditExecutables": true,
      "signExts": [
        "exe",
        "dll",
        "node"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "protocols": [
      {
        "name": "Ezra Bible App",
        "schemes": [
          "ezrabible"
        ]
      }
    ]
  }
}
